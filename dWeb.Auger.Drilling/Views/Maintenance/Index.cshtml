@using dWeb.Auger.Drilling.Models
@model Maintenance
@{
    ViewBag.Title = "Maintenance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Maintenance</h2>
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home">Search</a></li>
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                Work Order
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a data-toggle="tab" href="#menu1">Open New</a></li>
                <li><a data-toggle="tab" href="#menu2">Find Mine</a></li>
            </ul>
        </li>
    </ul>

    <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
            <h3>Search</h3>
            @Html.Partial("Search", Model.search)
        </div>
        <div id="menu1" class="tab-pane fade">
            <h3>New Work Order</h3>
            @Html.Partial("NewEditWorkOrder", Model.workOrder)
        </div>
        <div id="menu2" class="tab-pane fade">
            <h3>Assigned to Me</h3>
            <p>Some content in menu 2.</p>
        </div>
    </div>
